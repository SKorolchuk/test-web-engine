<ul class="nav navbar-nav navbar-right">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <li><a href="#">Grettings, @User.Identity.Name !</a></li>
    }
    else
    {
        <li><a href="#">You are not logined in the system.</a></li>
    }
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Actions<b class="caret"></b></a>
        <ul class="dropdown-menu">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <li><a href="@Url.Action("AccountInfo", "Account", new {userName = User.Identity.Name})">Account Info</a></li>
                <li class="divider"></li>
                <li><a href="@Url.Action("LogOff", "Account")">Sign Out</a></li>
            }
            else
            {
                <li><a href="@Url.Action("Register", "Account")">Register</a></li>
                <li class="divider"></li>
                <li><a href="@Url.Action("Login", "Account")">Sign In</a></li>
            }
        </ul>
    </li>
</ul>